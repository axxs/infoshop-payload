{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/plugins/marketplaces/claude-quality-plugins/plugins/typescript-quality-framework/.claude-plugin/hooks/smart-lint.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/plugins/marketplaces/claude-quality-plugins/plugins/vibe-check-integration/.claude-plugin/hooks/vibe-check-monitor.sh post-edit ${FILE_PATHS}"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/plugins/marketplaces/claude-quality-plugins/plugins/vibe-check-integration/.claude-plugin/hooks/vibe-check-monitor.sh session-end"
          }
        ]
      }
    ]
  }
}
