{
  "name": "infoshop",
  "version": "1.0.0",
  "description": "Infoshop bookstore management system built with Payload CMS",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prebuild": "node scripts/copy-theme-assets.mjs",
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "predev": "node scripts/copy-theme-assets.mjs",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && node scripts/copy-theme-assets.mjs && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "seed:theme": "cross-env NODE_OPTIONS='--no-deprecation --require dotenv/config' tsx src/scripts/seed-theme.ts",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@payloadcms/db-postgres": "3.62.0",
    "@payloadcms/db-sqlite": "3.62.0",
    "@payloadcms/next": "3.62.0",
    "@payloadcms/payload-cloud": "3.62.0",
    "@payloadcms/richtext-lexical": "3.62.0",
    "@payloadcms/ui": "3.62.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@square/web-payments-sdk-types": "^1.79.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "gsap": "^3.14.2",
    "jose": "^6.1.0",
    "lucide-react": "^0.552.0",
    "next": "15.4.8",
    "papaparse": "^5.5.3",
    "payload": "3.62.0",
    "react": "19.1.2",
    "react-dom": "19.1.2",
    "sharp": "0.34.2",
    "square": "^43.2.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "1.54.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.5.4",
    "@types/papaparse": "^5.5.0",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.8",
    "jsdom": "26.1.0",
    "playwright": "1.54.1",
    "playwright-core": "1.54.1",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
